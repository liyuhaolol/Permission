<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonTextDialog" parent="Theme.AppCompat.DayNight.Dialog" tools:ignore="NewApi">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.05</item>
        <item name="android:forceDarkAllowed" >false</item><!--禁止系统自动转色app-->
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_show_animation</item>
        <item name="android:windowExitAnimation">@anim/dialog_dismiss_animation</item>
    </style>
</resources>
